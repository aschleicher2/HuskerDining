<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group12.huskerdining.RatingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item"
        android:id="@+id/text_item"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:stepSize="0.5"
        android:isIndicator="true"
        android:layout_below="@+id/text_AverageRating"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Average Rating"
        android:id="@+id/text_AverageRating"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:layout_alignRight="@+id/text_item"
        android:layout_alignEnd="@+id/text_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_hall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Rating"
        android:id="@+id/text_YourRating"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:layout_alignRight="@+id/text_AverageRating"
        android:layout_alignEnd="@+id/text_AverageRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_centerHorizontal="true"
        android:stepSize="0.5"
        android:layout_below="@+id/text_YourRating" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button_submit"
        android:clickable="false"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hall"
        android:id="@+id/text_hall"
        android:layout_below="@+id/text_item"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp" />

</RelativeLayout>
