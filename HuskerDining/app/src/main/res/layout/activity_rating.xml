<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group12.huskerdining.RatingActivity"
    android:id="@+id/">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rating"
        android:id="@+id/text_rating"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item"
        android:id="@+id/text_item"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:layout_below="@+id/text_rating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/text_rating"
        android:layout_alignEnd="@+id/text_rating" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:stepSize="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Average Rating"
        android:id="@+id/text_AverageRating"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:layout_above="@+id/ratingBar"
        android:layout_alignRight="@+id/text_item"
        android:layout_alignEnd="@+id/text_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Rating"
        android:id="@+id/text_YourRating"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/text_AverageRating"
        android:layout_alignEnd="@+id/text_AverageRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_below="@+id/text_YourRating"
        android:layout_centerHorizontal="true"
        android:stepSize="0.5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button_submit"
        android:clickable="false"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
