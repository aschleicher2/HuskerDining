<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group12.huskerdining.SelectionActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Menu"
        android:id="@+id/select_menu"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_below="@+id/"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Menu"
        android:id="@+id/button_getMenu"
        android:layout_marginBottom="52dp"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dining Hall"
        android:id="@+id/textView"
        android:layout_marginTop="123dp"
        android:layout_below="@+id/select_menu"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/textView2"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/select_menu"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Meal"
        android:id="@+id/textView3"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_dinningHall"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/select_menu"
        android:layout_alignStart="@+id/select_menu"
        android:layout_alignRight="@+id/select_menu"
        android:layout_alignEnd="@+id/select_menu"
        android:spinnerMode="dropdown" />

</RelativeLayout>
