<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <p class="navbar-text">Workout</p>
      <button type="button" class="btn btn-default navbar-btn" onclick="onAllClick()">All Workouts</button>
      <button type="button" class="btn btn-default navbar-btn" onclick="onFavoriteClick()">Favorite</button>
    </div>
  </div>
